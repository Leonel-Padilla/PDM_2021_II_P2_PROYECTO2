<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#721CFE"
    tools:context=".PerderActivity">

    <Button
        android:id="@+id/btnMenuPrincipal2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/boton4_removebg_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnJugardeNuevo2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJugardeNuevo2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/boton3_removebg_preview"
        app:layout_constraintEnd_toStartOf="@+id/btnMenuPrincipal2"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/proyecto2opcion2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></pl.droidsonroids.gif.GifImageView>

</androidx.constraintlayout.widget.ConstraintLayout>